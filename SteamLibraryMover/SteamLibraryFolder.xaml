<UserControl x:Class="SteamLibraryMover.SteamLibraryFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamLibraryMover"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="70"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox IsReadOnly="True" Name="dir" VerticalContentAlignment="Center" ></TextBox>
        <Button Content="Browser" Name="browser_steam" Click="browser_steam_Click" Grid.Column="1"></Button>
    </Grid>
</UserControl>
